@model IEnumerable<ProductTestHome.Entities.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Product</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Tên sản phẩm
            </th>
            <th>
                Giá
            </th>
            <th>
                Hình ảnh
            </th>
            <th>
                Ngày
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.Name
            </td>
            <td>
               @item.price
            </td>
            <td>
                <img src="@item.photo"> <!-- Phải có thẻ Img để hiện thị hình ảnh-->
            </td>
            <td>
                @item.datePro
            </td>
            <td>
                <a href="/Products/Edit/@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
